{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [],
            "env": {
                "PG_HOST": "localhost",
                "PG_PORT": "5432",
                "PG_USER": "obuser",
                "PG_PASS": "obpass",
                "PG_DB": "orderbook",
                "KAFKA_BROKERS": "localhost:9092",
            },
            "buildFlags": ""
        },
        {
            "name": "React App: Chrome Debug",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "breakpointLocations": true,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "React App: Attach to Chrome",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true
        },
        {
            "name": "React App: Node Debug (npm start)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}