{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/cmd/main.go",
            "args": [],
            "env": {
                "PG_HOST": "localhost",
                "PG_USER": "obuser",
                "PG_PASS": "obpass",
                "PG_DB": "orderbook",
                "KAFKA_HOST": "localhost",
                "KAFKA_PORT": "9092",
            },
            "buildFlags": ""
        },
        {
            "name": "React App: Chrome Debugger",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/frontend/src",
            "breakpointLocations": true,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            }
        },
        {
            "name": "React App: Attach to Chrome",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend/src",
            "sourceMaps": true
        },
        {
            "name": "Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "REACT_APP_API_URL": "localhost:8080",
                "NODE_ENV": "development"
            }
        }
    ]
}